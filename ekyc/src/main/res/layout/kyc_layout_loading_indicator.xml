<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools">

    <androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/kyc_loading_indicator"
        android:gravity="center"
        android:minWidth="140dp"
        android:orientation="vertical"
        android:padding="@dimen/kyc_margin_padding_large">

        <ProgressBar
            style="?android:attr/progressBarStyle"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:indeterminateTint="@color/kyc_color_white"
            android:padding="@dimen/kyc_margin_padding_ultra_tiny"
            tools:targetApi="lollipop" />

        <com.fast.ekyc.ui.widget.AppRegularTextView
            android:id="@+id/tvLoadingContent"
            style="@style/KycBody1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/kyc_margin_padding_default_smaller"
            android:text="@string/kyc_loading_text"
            android:textColor="@color/kyc_color_white" />
    </androidx.appcompat.widget.LinearLayoutCompat>
</layout>